	i3bar_command i3bar -t
#	status_command i3blocks
    status_command py3status -c /home/seike/.config/py3status/config
#	mode dock
	position top
	colors {
            background          #212121
            statusline          #dddddd
            separator           #666666
            # class             border  backgr. text
            focused_workspace   #2b83a6 #2b83a6 #ffffff
            active_workspace    #212121 #212121 #ffffff
            inactive_workspace  #212121 #212121 #86888c
            urgent_workspace    #d64e4e #d64e4e #ffffff
            binding_mode        #229c56 #229c56 #ffffff
}
	font pango:$font_family $font_size
	separator_symbol "  "
	height $bar_height
#	tray_output primary
	binding_mode_indicator yes
#	strip_workspace_numbers yes
}


